{% extends "base.html.jinja2" %}

{% block content %}
    {% if variant %}
    <div class="table-responsive">    
        <table class="table">
            <tr>
                <th>Gene</th>
                <th>Transcript</th>
                <th>Cdot</th>
                <th>Pdot</th>
            </tr>
            <tr>
                <td><p class="h2">{{ variant.gene }}</p></td>
                <td><p class="h2">{{ variant.transcript }}</p></td>
                <td><p class="h2">{{ variant.cdot }}</p></td>
                <td><p class="h2">{{ variant.pdot }}</p></td>
            </tr>
        </table>
    </div>
    {% endif %}
    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for source in sources %}
            <div class="col">
                {{ source|safe }}
            </div>
        {% endfor %}
    </div>
{% endblock %}